<%- include("partials/header")-%>
<h1>Compose</h1>
<form action="/compose" method ="post">
    <div class="form-group">
        <label for="inputTitle">Title</label>
        <input type="text" class="form-control" id="inputTitle" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="inputPost">Post</label>
        <textarea class="form-control" name="postContent" id="inputPost"></textarea>
    </div>
    
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>


<%- include("partials/footer")-%>